{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "namePrefix": {
      "type": "string"
    },
    "domainName": {
      "type": "string"
    },
    "domainAdminUsername": {
      "type": "string"
    },
    "domainAdminPassword": {
      "type": "securestring"
    },
    "sqlNamePrefix": {
      "type": "string"
    },
    "sqlClusterIPAddress": {
      "type": "string"
    },
    "sqlServiceUsername": {
      "type": "string"
    },
    "sqlServicePassword": {
      "type": "securestring"
    },
    "sqlWitnessVMName": {
      "type": "string"
    },
    "sharePath": {
      "type": "string"
    },
    "_artifactsLocation": {
      "type": "string"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring"
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {
    "createSqlClusterModulesUrl": "[uri(parameters('_artifactsLocation'),concat('dsc/CreateSqlCluster.ps1.zip', parameters('_artifactsLocationSasToken')))]",
    "createSqlClusterConfigurationFunction": "CreateSqlCluster.ps1\\CreateSqlCluster",
    "addSqlClusterNodeModulesUrl": "[uri(parameters('_artifactsLocation'),concat('dsc/AddSqlClusterNode.ps1.zip', parameters('_artifactsLocationSasToken')))]",
    "addSqlClusterNodeConfigurationFunction": "AddSqlClusterNode.ps1\\AddSqlClusterNode",
    "clusterName": "[concat(parameters('namePrefix'),'-c')]",
    "sqlClusterName": "[concat(parameters('namePrefix'),'-sql')]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('sqlNamePrefix'),'1/CreateSqlCluster')]",
      "apiVersion": "2020-12-01",
      "location": "[parameters('location')]",
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.17",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "wmfVersion": "5.0",
          "modulesUrl": "[variables('createSqlClusterModulesUrl')]",
          "configurationFunction": "[variables('createSqlClusterConfigurationFunction')]",
          "properties": {
            "DomainName": "[parameters('domainName')]",
            "DomainAdminCredential": {
              "UserName": "[parameters('domainAdminUsername')]",
              "Password": "PrivateSettingsRef:domainAdminPassword"
            },
            "SharePath": "[concat('\\\\',parameters('sqlWitnessVMName'),'\\',parameters('sharePath'))]",
            "ClusterName": "[variables('clusterName')]",
            "SqlClusterName": "[variables('sqlClusterName')]",
            "SqlClusterIPAddress": "[parameters('sqlClusterIPAddress')]",
            "SqlServiceCredential": {
              "UserName": "[parameters('sqlServiceUsername')]",
              "Password": "PrivateSettingsRef:sqlServicePassword"
            }
          }
        },
        "protectedSettings": {
          "items": {
            "domainAdminPassword": "[parameters('domainAdminPassword')]",
            "sqlServicePassword": "[parameters('sqlServicePassword')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('sqlNamePrefix'),'2/AddSqlClusterNode')]",
      "apiVersion": "2020-12-01",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines/extensions',concat(parameters('sqlNamePrefix'),'1'), 'CreateSqlCluster')]"
      ],
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.17",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "wmfVersion": "5.0",
          "modulesUrl": "[variables('addSqlClusterNodeModulesUrl')]",
          "configurationFunction": "[variables('addSqlClusterNodeConfigurationFunction')]",
          "properties": {
            "DomainName": "[parameters('domainName')]",
            "DomainAdminCredential": {
              "UserName": "[parameters('domainAdminUsername')]",
              "Password": "PrivateSettingsRef:domainAdminPassword"
            },
            "SharePath": "[concat('\\\\',parameters('sqlWitnessVMName'),'\\',parameters('sharePath'))]",
            "ClusterName": "[variables('clusterName')]",
            "SqlClusterName": "[variables('sqlClusterName')]",
            "SqlServiceCredential": {
              "UserName": "[parameters('sqlServiceUsername')]",
              "Password": "PrivateSettingsRef:sqlServicePassword"
            }
          }
        },
        "protectedSettings": {
          "items": {
            "domainAdminPassword": "[parameters('domainAdminPassword')]",
            "sqlServicePassword": "[parameters('sqlServicePassword')]"
          }
        }
      }
    }
  ]
}